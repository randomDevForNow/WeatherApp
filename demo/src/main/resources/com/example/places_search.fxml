<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="235.0" prefWidth="354.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.SearchController">
   <HBox prefHeight="67.0" prefWidth="354.0" style="-fx-border-radius: 50;">
      <children>
          <TextField fx:id="searchField" prefHeight="40.0" prefWidth="259.0" promptText="Enter a location..." style="-fx-border-color: transparent; -fx-background-radius: 40;" />
          <Button fx:id="searchButton" prefHeight="43.0" prefWidth="41.0" style="-fx-background-color: transparent;">
            <graphic>
               <ImageView fitHeight="39.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@search.png" />
                  </image></ImageView>
            </graphic></Button>
      </children>
   </HBox>
    <ListView fx:id="resultsListView" prefHeight="206.0" prefWidth="240.0" visible="false" /> <!-- Set initially hidden -->
</VBox>
